---
#Files to be checked
yaml-files:
  - '*.yaml'
  - '*.yml'
  - '.yamllint'

ignore: |
  .github/workflows/yaml-lint.yml

# Rules 
rules:
  # anchors: enable
  # braces: enable
  # brackets: enable
  # colons: enable
  # commas: enable
  # comments:
    # level: warning
  # comments-indentation:
    # level: warning
  # document-end: disable
  document-start:
    level: error
  # empty-lines: enable
  # empty-values: disable
  # float-values: disable
  # hyphens: enable
  indentation: enable
  key-duplicates: enable
  # key-ordering: disable
  # line-length: enable
  new-line-at-end-of-file: 
    level: error
  # new-lines: enable
  # octal-values: disable
  # quoted-strings: disable
  # trailing-spaces: enable
  # truthy:
  #   level: warning
